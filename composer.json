{
    "name": "hiraeth/app",
    "version": "3.0-beta",
    "description": "A PHP Nano Framework",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "license": "MIT",
    "authors": [
        {
            "name":  "Matthew J. Sahagian",
            "email": "matthew.sahagian@gmail.com",
            "role":  "Lead Architect / Developer"
        }
    ],
    "require": {
        "imarc/opus": "^1.1",
        "hiraeth/core": "^3.0"
    },
    "autoload": {
        "classmap": ["local/"],
        "psr-0": {
            "" : "local/"
        }
    },
    "config": {
        "platform": {
            "php": "8.2.0"
        },
        "allow-plugins": {
            "imarc/opus": true
        }
    },
    "extra": {
        "opus": {
            "enabled": true
        }
    }
}
