<?php

//
// Track backwards until we discover our composer.json.
//

for (
	$root_path  = __DIR__;
	$root_path != '/' && !is_file($root_path . DIRECTORY_SEPARATOR . 'composer.json');
	$root_path  = realpath($root_path . DIRECTORY_SEPARATOR . '..')
);

$loader  = require $root_path . '/vendor/autoload.php';
$hiraeth = new Hiraeth\Application($root_path);

$hiraeth->exec(function() {
	$host = $this->getEnvironment('SERVER.HOST', 'localhost');
	$port = $this->getEnvironment('SERVER.PORT', '8080');
	$root = $this->getDirectory($this->getEnvironment('SERVER.ROOT', 'public'));

	passthru(sprintf(
		'%s -c %s/.user.ini -S %s:%s -t %s',
		$_SERVER['_'], $root->getPathname(), $host, $port, $root->getPathName()
	), $return);

	return $return;
});
